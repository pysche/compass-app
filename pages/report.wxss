.container.report {
    padding: 40rpx 0;
}

.text {
    display: block;
    text-align: center;
    margin: 0 auto;
}

.text-view {
    width: 80%;
}

.text-view.intro {
    color: #d9d9d9;
    margin: 20rpx auto;
}

.age-text {
    font-family: "Helvetica Neue LT W01_41488878";
    font-size: 36rpx;
    color: #e2d9b9;
    width: 200rpx;
    margin: 24rpx auto 0;
}

.age-yourage {
    color: #fff;
    font-size: 96rpx;
    font-family: "NeutrafaceText-Book";
    line-height: 80rpx;
    margin-top: 20rpx;
}

.age-presenter {
    animation: "fadeIn 1.5s 0s ease both";
    position: relative;
    width: 400rpx;
    height: 300rpx;
    background-image: url(http://compass.chinacloudsites.cn/content/dist/bda563929b80135e824ec23637be7ca3.png);
    background-repeat: no-repeat;
    background-size: contain;
    margin: 0 auto;
    text-align: cnter;
    padding-top: 100rpx;
}

.report-list {
    width: 100%;
}

.report-item {
    position: relative;
    height: 100rpx;
    border: 2rpx solid #000;
    margin-bottom: 0;
    line-height: 100rpx;
    background-color: #fff;
    color: #000;
}

.report-item .report-item-fill {
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    background: #fff;
    background-image: linear-gradient(-135deg,hsla(49,40%,69%,.47),#fff 61%,hsla(47,35%,62%,.57));
    z-index: 1;
}

.report-item .report-item-label1 {
    font-family: NeutrafaceText-Bold;
    font-size: 32rpx;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 2;
    padding: 0 20rpx;
    vertical-allign: middle;
}

.report-item .report-item-label2 {
    font-family: NeutrafaceText-Bold;
    font-size: 32rpx;
    position: absolute;
    top: 0;
    right: 0;
    z-index: 2;
    padding: 0 20rpx;
}
